{
  "$schema": "https://schema.tauri.app/config/1",
  "package": { "productName": "Palworld Rest Api Client", "version": "1.1.0" },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": { "identifier": "com.goodliferoleplay.palworld", "targets": "all" },
    "windows": [{ "title": "Palworld Rest Api Client", "width": 1280, "height": 800, "resizable": true }],
    "security": { "csp": null },
    "allowlist": { "all": true }
  }
}
