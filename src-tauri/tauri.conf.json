{
  "$schema": "https://schema.tauri.app/config/1",
  "package": { "productName": "Palworld Client", "version": "1.1.1" },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.goodliferoleplay.palworld",
      "targets": ["msi"]
    },
    "windows": [{ "title": "Palworld Client", "width": 1280, "height": 800, "resizable": true }],
    "security": { "csp": null },
    "allowlist": { "all": false }
  }
}
