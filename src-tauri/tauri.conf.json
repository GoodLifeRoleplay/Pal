{
  "$schema": "https://tauri.app/schemas/tauri-1.json",
  "package": {
    "productName": "Palworld Rest Api Client",
    "version": "1.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com_sorrowkrazy.app"
    },
    "windows": [
      {
        "title": "Palworld Rest Api Client",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "allowlist": {
      "all": true
    },
    "security": {
      "csp": null
    }
  }
}
